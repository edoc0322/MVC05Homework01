@model IEnumerable<MVC05Homework01.Models.客戶資料統計>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(p => p.客戶名稱)</th>
        <th>@Html.DisplayNameFor(p => p.聯絡人數量)</th>
        <th>@Html.DisplayNameFor(p => p.銀行帳戶數量)</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>@Html.DisplayFor(p => item.客戶名稱)</td>

        <td>@Html.DisplayFor(p => item.聯絡人數量)</td>

        <td>@Html.DisplayFor(p => item.銀行帳戶數量)</td>

        <td>
            @Html.ActionLink("Edit", "Edit", "客戶資料", new { id = item.Id },null) |
            @Html.ActionLink("Details", "Details", "客戶資料", new { id = item.Id },null) |
            @Html.ActionLink("Delete", "Delete", "客戶資料", new { id = item.Id },null)
        </td>
    </tr>
    }

</table>
