@model IEnumerable<MVC05Homework01.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    @Html.TextBox("客戶名稱");
    <input type="submit" value="Search" />
}
@Html.ActionLink("匯出資料", "Download", new { sortOrder = ViewBag.sortOrder, currentSort = ViewBag.CurrentSort })

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("客戶名稱", "Index", new { sortOrder = "客戶名稱", currentSort = ViewBag.CurrentSort })
        </th>
        <th>
            @Html.ActionLink("統一編號", "Index", new { sortOrder = "統一編號", currentSort = ViewBag.CurrentSort })
        </th>
        <th>
            @Html.ActionLink("電話", "Index", new { sortOrder = "電話", currentSort = ViewBag.CurrentSort })
        </th>
        <th>
            @Html.ActionLink("傳真", "Index", new { sortOrder = "傳真", currentSort = ViewBag.CurrentSort })
        </th>
        <th>
            @Html.ActionLink("地址", "Index", new { sortOrder = "地址", currentSort = ViewBag.CurrentSort })
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { sortOrder = "Email", currentSort = ViewBag.CurrentSort })
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


@section scripts
{
    <script type="text/javascript">


    </script>
}
